
<%- include('header'); -%>
<body>

  <div class="box" id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>
  
  <div class="box">
    <% for(var i=0; i<newItem.length; i++){ %>
    <div class="item">
        <input type="checkbox">
        <p> <%= newItem[i] %> </p>
    </div>
    <% } %>
    <form class="item" action="/" method="post">
      <div class="form-group">
        <input type="text" name="newItem" placeholder="Enter a task..." autocomplete="off">
      </div>
      <button type="submit" name="list" value=<%=listTitle%>>+</button>
    </form>
  </div>



  <%- include('footer'); -%> 

